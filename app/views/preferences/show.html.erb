<%- model_class = Preference -%>
<div class="page-header">
  <h1><%=t '.title', :default => Preference %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mail) %></dt>
      <dd><pre class="prettyprint"><%= @preference.mail %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:seasonalmail) %></dt>
      <dd><pre class="prettyprint"><%= @preference.seasonalmail %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:updates) %></dt>
      <dd><pre class="prettyprint"><%= @preference.updates %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:polls) %></dt>
      <dd><pre class="prettyprint"><%= @preference.polls %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:searchable) %></dt>
      <dd><pre class="prettyprint"><%= @preference.searchable %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:postfb) %></dt>
      <dd><pre class="prettyprint"><%= @preference.postfb %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:posttw) %></dt>
      <dd><pre class="prettyprint"><%= @preference.posttw %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:postpin) %></dt>
      <dd><pre class="prettyprint"><%= @preference.postpin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:partnershare) %></dt>
      <dd><pre class="prettyprint"><%= @preference.partnershare %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:diet) %></dt>
      <dd><pre class="prettyprint"><%= @preference.diet %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:allergy) %></dt>
      <dd><pre class="prettyprint"><%= @preference.allergy %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:dislike) %></dt>
      <dd><pre class="prettyprint"><%= @preference.dislike %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              preferences_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_preference_path(@preference), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              preference_path(@preference),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

