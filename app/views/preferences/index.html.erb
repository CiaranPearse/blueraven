<h1>Listing preferences</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Mail</th>
      <th>Seasonalmail</th>
      <th>Updates</th>
      <th>Polls</th>
      <th>Searchable</th>
      <th>Postfb</th>
      <th>Posttw</th>
      <th>Postpin</th>
      <th>Partnershare</th>
      <th>Diet</th>
      <th>Allergy</th>
      <th>Dislike</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.user %></td>
        <td><%= preference.mail %></td>
        <td><%= preference.seasonalmail %></td>
        <td><%= preference.updates %></td>
        <td><%= preference.polls %></td>
        <td><%= preference.searchable %></td>
        <td><%= preference.postfb %></td>
        <td><%= preference.posttw %></td>
        <td><%= preference.postpin %></td>
        <td><%= preference.partnershare %></td>
        <td><%= preference.diet %></td>
        <td><%= preference.allergy %></td>
        <td><%= preference.dislike %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

